#!/bin/sh

set -e

case "$1" in
    remove|deconfigure)
        update-alternatives --remove ksh /usr/bin/ksh2020
        update-alternatives --remove shcomp /usr/bin/shcomp2020

	# remove compatibility symlink if broken
	test '!' -h /usr/bin/ksh || test -e /usr/bin/ksh || rm -f /usr/bin/ksh

	if command -v update-binfmts >/dev/null; then
		test -e /var/lib/binfmts/ksh && \
		    update-binfmts --package ksh --remove ksh \
		    /usr/bin/ksh2020 || true
	fi
    ;;

    upgrade|failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

#DEBHELPER#

exit 0
